<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 侧边栏切换
        const sidebarToggle = document.getElementById('sidebarToggle');
        const adminSidebar = document.querySelector('.admin-sidebar');
        
        sidebarToggle.addEventListener('click', function() {
            adminSidebar.classList.toggle('expanded');
        });
        
        // 模态框操作
        const createPageBtn = document.getElementById('createPageBtn');
        const pageModal = document.getElementById('pageModal');
        const modalClose = document.querySelector('.modal-close');
        const cancelBtn = document.querySelector('.btn-cancel');
        const savePageBtn = document.getElementById('savePage');
        
        createPageBtn.addEventListener('click', function() {
            pageModal.classList.add('active');
        });
        
        modalClose.addEventListener('click', function() {
            pageModal.classList.remove('active');
        });
        
        cancelBtn.addEventListener('click', function() {
            pageModal.classList.remove('active');
        });
        
        savePageBtn.addEventListener('click', function() {
            // 这里添加保存页面的逻辑
            alert('页面保存成功！');
            pageModal.classList.remove('active');
        });
        
        // 编辑按钮点击事件
        const editBtns = document.querySelectorAll('.btn-edit');
        editBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                const title = row.querySelector('.page-title span').textContent;
                const url = row.querySelector('td:nth-child(2)').textContent;
                const status = row.querySelector('.status').classList.contains('published') ? 'published' : 'draft';
                
                document.querySelector('.modal-header h3').textContent = '编辑页面';
                document.getElementById('pageTitle').value = title;
                document.getElementById('pageUrl').value = url.substring(1); // 移除前导斜杠
                document.getElementById('pageStatus').value = status;
                
                pageModal.classList.add('active');
            });
        });
        
        // 删除按钮点击事件
        const deleteBtns = document.querySelectorAll('.btn-delete');
        deleteBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                const title = row.querySelector('.page-title span').textContent;
                
                if (confirm(`确定要删除页面"${title}"吗？`)) {
                    row.remove();
                    alert('页面删除成功！');
                }
            });
        });
        
        // 查看按钮点击事件
        const viewBtns = document.querySelectorAll('.btn-view');
        viewBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                const url = row.querySelector('td:nth-child(2)').textContent;
                
                window.open(url, '_blank');
            });
        });
    });
</script> 