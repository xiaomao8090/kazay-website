<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 侧边栏切换
        const sidebarToggle = document.getElementById('sidebarToggle');
        const adminSidebar = document.querySelector('.admin-sidebar');
        
        sidebarToggle.addEventListener('click', function() {
            adminSidebar.classList.toggle('expanded');
        });
        
        // 访问统计图表
        const ctx = document.getElementById('visitsChart').getContext('2d');
        const visitsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['加载中...'],
                datasets: [{
                    label: '访问量',
                    data: [0],
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    borderColor: 'rgba(52, 152, 219, 1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
        
        // 加载访问统计数据
        function loadVisitStats() {
            $.ajax({
                url: '/admin/api/visit-stats',
                method: 'GET',
                success: function(response) {
                    if (response.success) {
                        const data = response.data;
                        
                        // 更新图表数据
                        const labels = data.last7Days.map(day => day.date.substring(5)); // 只显示月-日
                        const visitData = data.last7Days.map(day => day.uniqueIPs);
                        
                        visitsChart.data.labels = labels;
                        visitsChart.data.datasets[0].data = visitData;
                        visitsChart.update();
                    }
                },
                error: function(xhr) {
                    console.error('加载访问统计数据失败:', xhr);
                }
            });
        }
        
        // 图表周期切换
        const chartBtns = document.querySelectorAll('.chart-btn');
        chartBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                chartBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                // 加载真实数据
                loadVisitStats();
            });
        });
        
        // 加载异常分析数据
        function loadExceptionAnalysis() {
            $.ajax({
                url: '/admin/api/exception-analysis',
                method: 'GET',
                success: function(response) {
                    if (response.success) {
                        const data = response.data;
                        
                        // 更新异常总数
                        $('#totalExceptions').text(data.total);
                        
                        // 更新最近异常表格
                        const recentExceptionsHtml = data.recentErrors.map(error => {
                            const date = new Date(error.timestamp);
                            const formattedDate = date.toLocaleString('zh-CN');
                            const ip = error.details.ipAddress || error.details.ip || 'unknown';
                            
                            return `
                                <tr>
                                    <td>${formattedDate}</td>
                                    <td>${error.type}</td>
                                    <td title="${error.message}">${error.message.substring(0, 50)}${error.message.length > 50 ? '...' : ''}</td>
                                    <td>${ip}</td>
                                </tr>
                            `;
                        }).join('');
                        
                        $('#recentExceptions').html(recentExceptionsHtml || '<tr><td colspan="4" class="text-center">暂无异常记录</td></tr>');
                        
                        // 更新异常IP排行表格
                        const topIPsHtml = data.topIPs.map(item => {
                            return `
                                <tr>
                                    <td>${item.ip}</td>
                                    <td>${item.count}</td>
                                    <td>
                                        <button class="btn btn-sm btn-danger block-ip" data-ip="${item.ip}">
                                            拦截
                                        </button>
                                    </td>
                                </tr>
                            `;
                        }).join('');
                        
                        $('#topExceptionIPs').html(topIPsHtml || '<tr><td colspan="3" class="text-center">暂无数据</td></tr>');
                        
                        // 绘制异常类型图表
                        drawExceptionTypeChart(data.byType);
                    }
                },
                error: function(xhr) {
                    console.error('加载异常分析数据失败:', xhr);
                }
            });
        }
        
        // 绘制异常类型图表
        function drawExceptionTypeChart(byType) {
            const ctx = document.getElementById('exceptionTypeChart');
            
            // 检查是否已有图表实例，如果有则销毁
            if (window.exceptionChart) {
                window.exceptionChart.destroy();
            }
            
            // 准备图表数据
            const labels = Object.keys(byType);
            const data = Object.values(byType);
            
            // 创建图表
            window.exceptionChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: '异常次数',
                        data: data,
                        backgroundColor: 'rgba(220, 53, 69, 0.6)',
                        borderColor: 'rgba(220, 53, 69, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        }
        
        // 页面加载完成后执行
        $(document).ready(function() {
            // 加载访问统计数据
            loadVisitStats();
            
            // 加载异常分析数据
            loadExceptionAnalysis();
            
            // 刷新异常分析按钮点击事件
            $('#refreshExceptionBtn').click(function() {
                loadExceptionAnalysis();
            });
            
            // 拦截IP按钮点击事件（委托事件）
            $(document).on('click', '.block-ip', function() {
                const ip = $(this).data('ip');
                if (confirm(`确定要拦截IP ${ip} 吗？`)) {
                    // 发送拦截请求
                    $.ajax({
                        url: '/admin/api/block-ip',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ ip }),
                        success: function(response) {
                            if (response.success) {
                                alert('IP已成功拦截');
                                loadExceptionAnalysis(); // 重新加载数据
                            } else {
                                alert('拦截失败: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('请求失败，请稍后再试');
                        }
                    });
                }
            });

            // 自动拦截按钮点击事件
            $('#autoBlockBtn').click(function() {
              if (confirm('确定要运行自动拦截吗？系统将自动拦截有多次异常记录的IP。')) {
                // 禁用按钮
                $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> 处理中...');
                
                // 发送请求
                $.ajax({
                  url: '/admin/api/auto-block',
                  method: 'POST',
                  success: function(response) {
                    if (response.success) {
                      alert(response.message);
                      loadExceptionAnalysis(); // 重新加载数据
                    } else {
                      alert('自动拦截失败: ' + response.message);
                    }
                  },
                  error: function() {
                    alert('请求失败，请稍后再试');
                  },
                  complete: function() {
                    // 恢复按钮状态
                    $('#autoBlockBtn').prop('disabled', false).html('<i class="fas fa-shield-alt"></i> 自动拦截');
                  }
                });
              }
            });
        });
    });
</script> 