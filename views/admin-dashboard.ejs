<!-- 管理后台主页 -->
<div class="admin-dashboard">
    <!-- 侧边栏 -->
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <h3>管理后台</h3>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li class="active">
                    <a href="/admin/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>控制台</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/pages">
                        <i class="fas fa-file-alt"></i>
                        <span>页面管理</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/messages">
                        <i class="fas fa-envelope"></i>
                        <span>留言管理</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/settings">
                        <i class="fas fa-cog"></i>
                        <span>网站设置</span>
                    </a>
                </li>
                <li class="logout">
                    <a href="/admin/logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>退出登录</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- 主内容区 -->
    <div class="admin-main">
        <!-- 顶部导航 -->
        <div class="admin-header">
            <div class="header-left">
                <button id="sidebarToggle" class="sidebar-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h2>控制台</h2>
            </div>
            <div class="header-right">
                <div class="admin-user">
                    <img src="/images/admin-avatar.png" alt="管理员头像" class="admin-avatar">
                    <span class="admin-name"><%= username %></span>
                </div>
            </div>
        </div>

        <!-- 内容区域 -->
        <div class="admin-content">
            <!-- 数据概览卡片 -->
            <div class="dashboard-cards">
                <div class="card">
                    <div class="card-icon visitors">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-info">
                        <h3>访问量</h3>
                        <p class="card-number"><%= stats.visits || 0 %></p>
                        <p class="card-trend <%= stats.visitsTrend > 0 ? 'up' : 'down' %>">
                            <i class="fas fa-arrow-<%= stats.visitsTrend > 0 ? 'up' : 'down' %>"></i>
                            <span><%= Math.abs(stats.visitsTrend || 0) %>% 较上周</span>
                        </p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-icon messages">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="card-info">
                        <h3>新留言</h3>
                        <p class="card-number"><%= stats.newMessages || 0 %></p>
                        <p class="card-trend <%= stats.messagesTrend > 0 ? 'up' : 'down' %>">
                            <i class="fas fa-arrow-<%= stats.messagesTrend > 0 ? 'up' : 'down' %>"></i>
                            <span><%= Math.abs(stats.messagesTrend || 0) %>% 较上周</span>
                        </p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-icon conversion">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="card-info">
                        <h3>转化率</h3>
                        <p class="card-number"><%= stats.conversionRate || '0.0' %>%</p>
                        <p class="card-trend <%= stats.conversionTrend > 0 ? 'up' : 'down' %>">
                            <i class="fas fa-arrow-<%= stats.conversionTrend > 0 ? 'up' : 'down' %>"></i>
                            <span><%= Math.abs(stats.conversionTrend || 0) %>% 较上周</span>
                        </p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-icon bounce">
                        <i class="fas fa-undo"></i>
                    </div>
                    <div class="card-info">
                        <h3>跳出率</h3>
                        <p class="card-number"><%= stats.bounceRate || '0.0' %>%</p>
                        <p class="card-trend <%= stats.bounceTrend < 0 ? 'up' : 'down' %>">
                            <i class="fas fa-arrow-<%= stats.bounceTrend < 0 ? 'up' : 'down' %>"></i>
                            <span><%= Math.abs(stats.bounceTrend || 0) %>% 较上周</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- 图表区域 -->
            <div class="dashboard-charts">
                <div class="chart-container">
                    <div class="chart-header">
                        <h3>访问统计</h3>
                        <div class="chart-actions">
                            <button class="chart-btn active" data-period="week">周</button>
                            <button class="chart-btn" data-period="month">月</button>
                            <button class="chart-btn" data-period="year">年</button>
                        </div>
                    </div>
                    <div class="chart-body">
                        <canvas id="visitsChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- 最近留言 -->
            <div class="recent-messages">
                <div class="section-header">
                    <h3>最近留言</h3>
                    <a href="/admin/messages" class="view-all">查看全部</a>
                </div>
                <div class="message-list">
                    <% if (recentMessages && recentMessages.length > 0) { %>
                        <% recentMessages.forEach(message => { %>
                            <div class="message-item">
                                <div class="message-avatar">
                                    <span><%= message.name.charAt(0) %></span>
                                </div>
                                <div class="message-content">
                                    <div class="message-header">
                                        <h4><%= message.name %></h4>
                                        <span class="message-time"><%= new Date(message.date).toLocaleString('zh-CN') %></span>
                                    </div>
                                    <p class="message-text"><%= message.message.length > 100 ? message.message.substring(0, 100) + '...' : message.message %></p>
                                    <div class="message-actions">
                                        <a href="/admin/messages" class="btn-view">查看详情</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-messages">
                            <p>暂无留言</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- 异常分析面板 -->
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">异常分析</h5>
                            <div>
                              <button id="autoBlockBtn" class="btn btn-sm btn-danger me-2">
                                <i class="fas fa-shield-alt"></i> 自动拦截
                              </button>
                              <button id="refreshExceptionBtn" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-sync-alt"></i> 刷新
                              </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card bg-light mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">异常总数</h5>
                                            <h2 id="totalExceptions" class="text-danger">0</h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="card bg-light mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">异常类型分布</h5>
                                            <div id="exceptionTypeChart" style="height: 200px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <h5>最近异常</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>时间</th>
                                                    <th>类型</th>
                                                    <th>信息</th>
                                                    <th>IP地址</th>
                                                </tr>
                                            </thead>
                                            <tbody id="recentExceptions">
                                                <!-- 最近异常将通过JS动态加载 -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5>异常IP排行</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>IP地址</th>
                                                    <th>异常次数</th>
                                                    <th>操作</th>
                                                </tr>
                                            </thead>
                                            <tbody id="topExceptionIPs">
                                                <!-- 异常IP排行将通过JS动态加载 -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

